@model IEnumerable<Activity.Areas.Area.Models.Activity>
@{
    ViewBag.Title = "活動分類資料";
}
<h2>活動分類資料</h2>
<a href="@Url.Action("Insert", "Activity", new { area="Area"})" class="btn btn-primary">新增分類</a><hr />
<table class="table table-bordered table-hover">


    <thead>
        <tr>
            <th>活動編號</th>
            <th>活動名稱</th>
            <th>描述</th>
            <th>地點</th>
            <th>主辦人</th>
            <th>編輯</th>
            <th>刪除</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var _Activity in Model)
            {
            <tr>
                <td>@_Activity.ActivityID</td>
                <td>@_Activity.ActivityName</td>
                <td>@_Activity.Description</td>
                <td>@_Activity.Location</td>
                <td>@_Activity.Host</td>
                
                <td><a href="@Url.Action("Edit", "Activity", new { area="Area",id= @_Activity.ActivityID })" class="btn btn-primary">編輯</a></td>
                <td><a href="@Url.Action("Delete", "Activity", new { area="Area",id= @_Activity.ActivityID  })" class="btn btn-danger">刪除</a></td>
            </tr>

        } 
    </tbody>
</table>
